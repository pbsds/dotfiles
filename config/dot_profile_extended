#
# ~/.extend.profile

# fixes
alias fix_touchscreen='sudo bash -c "rmmod wacom && modprobe wacom"'
alias fix_autofs='sudo killall ssh && sudo systemctl restart autofs && cd .'
alias fix_pulseaudio='pulseaudio -k; pulseaudio --start'
function fix_pulseaudio_force {
	pulseaudio -k
	sudo killall pulseaudio
#	rm -r ~/.pulse*
	rm -r ~/.config/pulse/{*.tdb,*-sink,*-source,cookie}
	sleep 10;
	pulseaudio --start
	echo "Comment: alert sound was reset to default"
}


# Random shortcuts
alias open="xdg-open"
alias fork="nohup xterminal --hide-menubar . >/dev/null 2>&1 &"
function vpn {
	ip="$(dig +short -x a $1 | tail -n 1)"
	echo sshuttle 0.0.0.0/0 --disable-ipv6 --dns -r "$1" -x $ip
	sshuttle 0.0.0.0/0 --disable-ipv6 --dns -r "$1" -x $ip
}

alias clip="xclip -sel clip"
function clipf {
	echo $1
	cat "$1" | xclip -sel clip -t "$(file --mime-type "$1" -b)"
}
function clipmd {
	(
		echo "\`\`\`"
		cat "$1"
		echo "\`\`\`"
	) | clip
}


# Haskell through stack
if which pacman > /dev/null; then
#	alias ghc="stack ghc -dynamic"
	alias ghc="stack ghc"
	alias ghci="stack ghci"
	
fi

