function salias { # alias command, stripped
	res="$( alias $1 )"
	echo "$res" | cut -d"=" -f2- | cut -c2- | rev | cut -c2- | rev
	if command -v xclip >/dev/null ; then
		echo "$res" | cut -d"=" -f2- | cut -c2- | rev | cut -c2- | rev | xclip -sel clip
	fi
}



